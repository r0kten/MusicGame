<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5F5F5">

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/timer_text"
        android:textSize="18sp"
        android:textColor="#FF333333"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/score_text"
        android:textSize="18sp"
        android:textColor="#FF333333"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/timerText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/songHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/song_hint"
        android:textSize="20sp"
        android:textColor="#FF333333"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/scoreText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonJuiceWrld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/juice_wrld"
        android:textSize="16sp"
        android:textColor="#FFFFFFFF"
        android:background="#FF0288D1"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/songHint"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonXXXTentacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/xxxtentacion"
        android:textSize="16sp"
        android:textColor="#FFFFFFFF"
        android:background="#FF0288D1"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/buttonJuiceWrld"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonKendrick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/kendrick_lamar"
        android:textSize="16sp"
        android:textColor="#FFFFFFFF"
        android:background="#FF0288D1"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/buttonXXXTentacion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>